                                <input class="otc-input" type="number" pattern="[0-9]*" min="0" max="9" maxlength="1"
                                    value="" inputtype="numeric" id="otc-2" required>
                                <input class="otc-input" type="number" pattern="[0-9]*" min="0" max="9" maxlength="1"
                                    value="" inputtype="numeric" id="otc-3" required>
                                <input class="otc-input" type="number" pattern="[0-9]*" min="0" max="9" maxlength="1"
