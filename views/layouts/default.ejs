                            <button type="button" class="btn primaryBtn mt-3" data-bs-dismiss="modal" id="cancel-code"
                                style="width: 45%;">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <section id="confirm-pass-section">
