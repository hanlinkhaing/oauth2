<script>
    const error = JSON.parse(`<%- JSON.stringify(error) %>`);
    if (error.message) {
        showError(error.message);
    }

    const parseCookieValueString = str =>
        str
            .split(';')
            .map(v => v.split('='))
            .reduce((acc, v) => {
                acc[decodeURIComponent(v[0].trim())] = decodeURIComponent(v[1].trim())
                return acc;
            }, {});

    const tokens = parseCookieValueString(document.cookie);
    const payload = parseJwt(tokens.accessToken);
    document.querySelectorAll('[name="user-email"]').forEach(userEmail => userEmail.innerHTML = payload.user.email);
    document.querySelectorAll('[name="user-img"]').forEach(userImg => userImg.src = payload.user.profileImageUrl);

    function deleteCookie(name) {
        document.cookie = name + '=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
    }

    document.querySelectorAll('[name="logout-btn"]').forEach(logout => logout.onclick = () => location.href = `<%- process.env.URL_PRE_FIX %>/users/${payload.user.id}/logout`);

    const profiles = document.querySelectorAll('[name="li-profile"]');
    const twoFAs = document.querySelectorAll('[name="li-two-fa"]');
    const upgrades = document.querySelectorAll('[name="li-upgrade"]');

    profiles.forEach(profile =>
        profile.onclick = () => location.href = `<%- process.env.URL_PRE_FIX %>/users/${payload.user.id}/profile`
    );

    const fixSmsVerify = (isSmsVerified) => {
        twoFAs.forEach(twoFA => {
            if (!isSmsVerified) twoFA.style.display = 'none';
            else twoFA.onclick = () => location.href = `<%- process.env.URL_PRE_FIX %>/users/${payload.user.id}/two-fa`;
        });

        upgrades.forEach(upgrade => {
            if (isSmsVerified) upgrade.style.display = 'none';
            else upgrade.onclick = () => location.href = `<%- process.env.URL_PRE_FIX %>/users/${payload.user.id}/upgrade`;
        });
    }

    axios.get(`<%- process.env.URL_PRE_FIX %>/users/${payload.user.id}`).then(res => fixSmsVerify(res.data.data.isSmsVerified)).catch(e => fixSmsVerify(payload.user.isSmsVerified))

    const confirmPass = (callback) => {
        const confirmPassModal = document.getElementById('confirm-pass-modal');
        confirmPassModal.style.display = 'block';

        document.getElementById('confirm-pass-btn').onclick = async () => {
            try {
                const password = document.getElementById('password').value;
                const result = await axios.post(`<%- process.env.URL_PRE_FIX %>/users/${payload.user.id}/confirm-pass`, { password: password },
                    { headers: { 'Content-Type': 'application/json' } });
                password.value = null;
                callback(null);
            } catch (err) {
                showError(err.response.data.message);
                callback(new Error(err.response.data.message));
            } finally {
                confirmPassModal.style.display = 'none';
            }
        }
    }
</script>
