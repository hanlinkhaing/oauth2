<div>
    <div class="text-center">
        <img src="/build/assets/img/logo.png" class="logo mt-2" />
    </div>
    <div class="req-forgot-pass-div mt-3">
        <form class="Auth-form m-3" method="post" id="req-forgot-pass-form" action="">

            <h6 class="text-center mt-3 mb-1">We will send reset password link to your mail.</h6>
            <div class="Auth-form-content">
                <div class="form-floating mt-3">
                    <input type="text" placeholder="full name" name="email" id="email" class="form-control shadow-none"
                        value=""></input>
                    <label class="form-label" for="username">Email</label>
                </div>
                <div class="d-flex mt-3 mb-4">
                    <button type="submit" class="btn primaryBtn" style="margin-right: 10px;">Submit</button>
                    <button type="button" class="btn primaryBtn" style="margin-left: 10px;" id="back-to-login">Back
                        To Login</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    const encodedData = sessionStorage.getItem('client_oauth_request');
    document.getElementById('req-forgot-pass-form').action = `request-forgot-pass?${encodedData ? `client_oauth_request=${encodedData}&` : ''}`;
    document.getElementById('back-to-login').onclick = () => location.href = `<%- process.env.URL_PRE_FIX %>/auth/login`;
</script>
<style>
    .Auth-form {
        width: 30vw;
    }

    @media (max-width: 887px) {
        .Auth-form {
            width: 50vw;
        }
    }

    @media (max-width: 535px) {
        .Auth-form {
            width: 80vw;
        }
    }

    .req-forgot-pass-div {
        margin: 2px 3px 4px 3px;
        padding: 2px 2px;
        border: solid 1px #d8dee4;
        border-radius: 20px;
        background: #f6f8fa;
    }
</style>